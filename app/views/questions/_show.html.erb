
<h2><%=@question.question_title%></h2>
<h3><%=@question.question_text%></h3>

<%=form_for Result.new(attempt: @quiz.attempt(@current_user), question: @question) do |f|%>
<p><%=f.collection_select :answer_id , @question.answers, :id, :answer_text%></p>
<%=f.hidden_field :attempt_id%>
<%=f.hidden_field :question_id%>
<%=f.submit 'Next', class: 'btn btn-info mt-2'%>
<%end%>
