<div id="page-content">
    <div class="container mt-4">
<%=form_for @question do |f|%>
<%=f.hidden_field :quiz_id %>
<p><%=f.label "Titel" %>
<%=f.text_field :question_title, class: 'form-control', placeholder: 'Titel der Frage eingeben'%></p>
<p><%=f.label "Frage" %><br><%=f.text_field :question_text, class: 'form-control', placeholder: 'Frage eingeben'%></p>
    <div class="form-row">
        <div class="form-group col-md-3">
          <%=f.label "Maximalpunktzahl" %><br><%=f.number_field :max_points, in: 0..5, step: 0.5, class: 'special_input', placeholder: '0'%>
        </div>
        <div class="form-group col-md-3">
          <%=f.label "Gewichtungsfaktor" %><br><%=f.number_field :point_weighting, in: 1..3, step: 0.5, class: 'special_input', placeholder: '0'%>
      </div>
     </div>
<%=f.submit 'Frage speichern', class: 'btn btn-info mb-3'%>
<%end%>

<div class="panel-group" id="question<%=@question.id%>Accordion" role="tablist" aria-multiselectable="true">
      <% @question.answers.each.with_index do |answer, i| %>
        <div class="panel-heading" role="tab" id="question<%=@question.id%>Heading<%=answer.id%>">
            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#question<%=@question.id%>Accordion" href="#question<%=@question.id%>Collapse<%=answer.id%>" aria-expanded="false" aria-controls="question<%=@question.id%>Collapse<%=answer.id%>">
             Antwort: <%="#{i+1}" %> 
            </a>
        </div>  
    <div id="question<%=@question.id%>Collapse<%=answer.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="question<%=@question.id%>Heading<%=answer.id%>">
      <div class="panel-body">
      <% @answer = answer %>
      <%= render "answers/form" %>
      </div>
    </div>
    <%end%>
    <div class="panel-heading" role="tab" id="question<%=@question.id%>HeadingNew">
      <h5 class="panel-title mb-3">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#question<%=@question.id%>Accordion" href="#question<%=@question.id%>CollapseNew" aria-expanded="false" aria-controls="question<%=@question.id%>CollapseNew">
          Antwort hinzuf√ºgen
        </a>
      </h5>
    </div>
    <div id="question<%=@question.id%>CollapseNew" class="panel-collapse collapse" role="tabpanel" aria-labelledby="question<%=@question.id%>HeadingNew">
      <div class="panel-body">
      <% @answer = Answer.new(question_id: @question.id, points: 0) %>
      <%= render "answers/form" %>
      </div>
    </div>
  </div>
</div>











