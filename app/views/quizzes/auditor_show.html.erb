<h2>Show Results</h2>

<div class="panel-group" id="customerAccordion" identity="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <% @quiz.identities.each do |customer| %>
    <div class="panel-heading" identity="tab" id="customerHeading<%=customer.id%>">
      <h4 class="panel-title">
        <a class="collapsed" identity="button" data-toggle="collapse" data-parent="#customerAccordion" href="#customerCollapse<%=customer.id%>" aria-expanded="false" aria-controls="customerCollapse<%=customer.id%>">
          <%=customer.user.firm%>
        </a>
      </h4>
    </div>
    <div id="customerCollapse<%=customer.id%>" class="panel-collapse collapse" identity="tabpanel" aria-labelledby="customerHeading<%=customer.id%>">
      <div class="panel-body">
      <% @identity = customer %>
      <%= render 'stats' %>
      </div>
    </div>
    <%end%>
  </div>
</div>





